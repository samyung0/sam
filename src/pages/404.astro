---
import CustomError from "@/components/astro/CustomError.astro";
import CustomErrorJP from "@/components/astro/CustomError-jp.astro";
import CustomErrorTW from "@/components/astro/CustomError-zh-TW.astro";

export const prerender = false;

const cookiesLocale = Astro.cookies.get("lang")?.value;
const localeLocale = Astro.preferredLocale;
const locale = cookiesLocale ?? localeLocale;
---

{
  (() => {
    if (locale === "jp") return <CustomErrorJP />;
    if (locale === "zh-TW") return <CustomErrorTW />;
    return <CustomError />;
  })()
}
