---
import { cn } from "@/lib/utils";
import Typography from "./Typography.astro";

interface Props {
  class?: string;
  children?: any;
}

const { class: className } = Astro.props;
---

<Typography
  class={cn(
    `[&_:where(*):not(:where([class~="not-prose"]_*)):not(div)]:m-0
      [&_:where(*):not(:where([class~="not-prose"]_*)):not(div)]:text-base
      [&_:where(small):not(:where([class~="not-prose"]_*)):not(div)]:text-xs
      prose-p:text-base
      flex flex-col justify-center gap-16`,
    className
  )}
>
  <slot />
</Typography>
